@inherits DisplayParentsBase


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div style="border: 1px solid #d6d5d5;text-align: right;">
    <MudButton ButtonType="ButtonType.Button" Href="/AddParent" Variant="Variant.Filled" Color="Color.Primary" 
               Class="ml-auto" Style="margin: 10px;">Add Parent</MudButton>
</div>
<div style="border: 1px solid #d6d5d5;">
<table class="table" style="width:100%;color: inherit;">
    <thead>
    <tr>
        <th style="color:DodgerBlue;">
            First<br>Name
        </th>
        <th style="color:DodgerBlue;">
            Last<br>Name 
        </th>
        <th style="color:DodgerBlue;">
            Username
        </th>
        <th style="color:DodgerBlue;">
            Email
        </th>
        <th style="color:DodgerBlue;">
            Home<br>Address
        </th>
        <th style="color:DodgerBlue;">
            Phone 1
        </th>
        <th style="color:DodgerBlue;">
            Work<br>Phone
        </th>
        <th style="color:DodgerBlue;">
            Home<br>Phone
        </th>
        <th style="color:DodgerBlue;">
            Siblings
        </th>
        <th>
            Action
        </th>
    </tr>
    </thead>
    <tbody style="color: inherit;">
    @foreach(var item in Parents) {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Username</td>
            <td>@item.Email</td>
            <td>@item.Address</td>
            <td>@item.PhoneOne</td>
            <td>@item.PhoneWork</td>
            <td>@item.PhoneHome</td>
            <td>@item.SiblingCount</td>
                    
            <td>
                <a style="padding-right:5px;" href="/ParentDetails/@item.ParentId"><i class="fa fa-bars" style="width:10px;height:10px;color:DodgerBlue;"></i></a>
                <a style="padding-right:5px;" href="/EditParent/@item.ParentId"><i class="fa fa-magic" style="width:10px;height:10px;color:DodgerBlue;" ></i></a>
                <a style="padding-right:5px;"><i class="fa fa-trash" style="width:10px;height:10px;color:DodgerBlue;" @onclick="() => DeleteItem_Click(item.ParentId)"></i></a>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>