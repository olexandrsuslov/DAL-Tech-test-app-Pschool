@page "/ParentDetails/{Id:int}"
@inherits ParentDetailsBase
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


@if (Parent == null && ErrorMessage == null)
{
    <DisplaySpinner/>
}
else if (ErrorMessage != null)
{
    <DisplayError ErrorMessage="@ErrorMessage"></DisplayError>
}
else
{
    <h3 class="mb-5">Parent Details</h3>
    <div class="row">
        <div class="col-md-6 mb-4" style="text-align:center;">
            <i class="fa fa-id-card" style="font-size:200px;color:dodgerblue;"></i>
            </div>
        <div class="col-md-6">
            <h3> First Name - @Parent.FirstName</h3>
            <h3> Last Name - @Parent.LastName</h3>
            <h3> Username - @Parent.Username</h3>
            <h3> Email - @Parent.Email</h3>
            <h3> Home Address - @Parent.Address</h3>
            <h3> Phone 1 - @Parent.PhoneOne</h3>
            <h3> Phone Work - @Parent.PhoneWork</h3>
            <h3> Phone Home - @Parent.PhoneHome</h3>
            <h3> Siblings - @Parent.SiblingCount</h3>
        </div>

    </div>
}