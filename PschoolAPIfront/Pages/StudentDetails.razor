@page "/StudentDetails/{Id:int}"
@inherits StudentDetailsBase
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


@if (Student == null && ErrorMessage == null)
{
    <DisplaySpinner/>
}
else if (ErrorMessage != null)
{
    <DisplayError ErrorMessage="@ErrorMessage"></DisplayError>
}
else
{
    <h3 class="mb-5">Student Details</h3>
    <div class="row">
        <div class="col-md-6 mb-4" style="text-align:center;">
            <i class="fa fa-id-card" style="font-size:200px;color:dodgerblue;"></i>
            </div>
        <div class="col-md-6">
            <h3> First Name - @Student.FirstName</h3>
            <h3> Last Name - @Student.LastName</h3>
            <h3> Username - @Student.Username</h3>
            <h3> Email - @Student.Email</h3>
            <h3> Phone 1 - @Student.PhoneOne</h3>
            <h3> Siblings - @Student.SiblingCount</h3>
        </div>

    </div>
}