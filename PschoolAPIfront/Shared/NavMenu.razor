


<MudDrawer @bind-Open="SideBarOpen" Elevation="1">
    <MudDrawerHeader>
        <MudAvatar Color="Color.Transparent" Size="Size.Large" Image="assets/images.png"/>
        <MudText Typo="Typo.h5" Color="Color.Primary" Style="margin-top:10px; margin-left:15px;">Pschool</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <AuthorizeView>
            <Authorized>
                <MudContainer Style="text-align: center;">
                <MudAvatar Color="Color.Transparent" Style=" display: inline-block;" Size="Size.Medium" Image="assets/avatar.png"/>
                <MudText Typo="Typo.h6" Color="Color.Primary" Style="margin-bottom: 20px; display: inline;">@context.User.Identity.Name</MudText>
                </MudContainer>
            </Authorized>
        </AuthorizeView>
        <MudNavGroup Title="Parents" Icon="@Icons.Filled.Person" Expanded="true">
            <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Filled.Storage">List</MudNavLink>
            <AuthorizeView Roles="admin">
                <Authorized>
                    <MudNavLink Href="/AddParent" Icon="@Icons.Filled.Add">Add Parent</MudNavLink>
                </Authorized>
            </AuthorizeView>
        </MudNavGroup>


        <MudNavGroup Title="Students" Icon="@Icons.Filled.Person" Expanded="true">
            <MudNavLink Href="Students" Icon="@Icons.Filled.Storage">List</MudNavLink>
            <AuthorizeView Roles="admin">
                <Authorized>
                    <MudNavLink Href="/AddStudent" Icon="@Icons.Filled.Add">Add Student</MudNavLink>
                </Authorized>
            </AuthorizeView>
        </MudNavGroup>
    </MudNavMenu>
</MudDrawer>

@code {
    [Parameter]
    public bool SideBarOpen { get; set; }
}