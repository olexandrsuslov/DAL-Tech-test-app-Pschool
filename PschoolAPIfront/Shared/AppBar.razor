<MudAppBar Elevation="3">
	<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" 
				   OnClick="async () => await OnSidebarToggled.InvokeAsync()" />
	<MudSpacer />
	
	<AuthorizeView>
        <Authorized>
	        <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" Href="logout" />
        </Authorized>
        <NotAuthorized>
            <MudIconButton Icon="@Icons.Material.Filled.Login" Color="Color.Inherit" Href="login" />
	        <MudIconButton Icon="@Icons.Material.Filled.Person" Color="Color.Inherit" Href="Registration" />
        </NotAuthorized>
    </AuthorizeView>
	
	
	@if (_isLightMode)
	{
		<MudIconButton Icon="@Icons.Material.Filled.Brightness4" Color="Color.Inherit" OnClick="ToggleTheme" />
	}
	else
	{
		<MudIconButton Icon="@Icons.Material.Filled.Brightness5" Color="Color.Inherit" OnClick="ToggleTheme" />
	}
</MudAppBar>